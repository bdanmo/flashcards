extends layout.pug

block content
  section#content
    h2= text
    if hint
      p
        i Hint: #{hint}
    if side === 'question'    
      a(href=`${id}?side=answer`) Answer
    else if side === 'answer'
      a(href=`${id}?side=question`) Question
    br
    a(href=`/cards/${+id === lastCardId ? +id - lastCardId : +id + 1}`) Next card!
    figure
      img(src=`${img}`, alt=`Hey ${name}`)
      figcaption Hey #{name}
    