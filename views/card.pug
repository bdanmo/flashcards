extends app

block card
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        if hint
          p#hint
            i Hint: #{hint}
      .card-flip-wrap
        a(href=`${id}?side=${sideToShow}`)
          img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href=`/cards/${+id === lastCardId ? +id - lastCardId : +id + 1}`)
          img(src='/static/img/next.svg')
    if side === 'question'
      script(src='/static/js/app.js')
    